<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Ngo.PeopleListPage"
             Title="Нуждающиеся">
    <CollectionView x:Name="List" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="12,6" Padding="12" BorderColor="#E5E7EB">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding FullName}" FontAttributes="Bold"/>
                        <Button Grid.Row="0" Grid.Column="1" Text="Профиль" Command="{Binding OpenCmd}" CommandParameter="{Binding Id}"/>
                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Address}" FontSize="12" TextColor="#6B7280"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
