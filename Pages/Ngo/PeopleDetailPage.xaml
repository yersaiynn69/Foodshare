<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Ngo.PeopleDetailPage"
             Title="Профиль">
    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="10">
            <Label x:Name="NameLbl" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="AddrLbl"/>
            <Label x:Name="PhoneLbl"/>
            <Label x:Name="NotesLbl" TextColor="#6B7280"/>
            <Button x:Name="CallBtn" Text="Позвонить"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
