<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Ngo.NgoHomePage"
             Title="Есть кому помочь?">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <HorizontalStackLayout Spacing="10">
                <Button Text="Найти еду поблизости" x:Name="MapBtn"/>
                <Button Text="Мои бронирования" x:Name="BookingsBtn"/>
            </HorizontalStackLayout>

            <Button Text="Нуждающиеся" x:Name="PeopleBtn"/>

            <Label Text="Доступная еда" FontSize="18" FontAttributes="Bold"/>
            <CollectionView x:Name="FoodList" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,6" Padding="10" BorderColor="#E5E7EB">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Title}" FontAttributes="Bold"/>
                                <Label Text="{Binding Description}" FontSize="12" TextColor="#6B7280"/>
                                <Label Text="{Binding Kg}" FontSize="12"/>
                                <Button Text="Забронировать для подопечного" Command="{Binding BookCmd}" CommandParameter="{Binding Id}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
