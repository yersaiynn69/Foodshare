<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="Foodshare.Pages.Volunteer.DeliveryDetailPage"
             Title="Доставка">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="10">
            <Label x:Name="Rest" FontAttributes="Bold"/>
            <Label x:Name="RestPhone"/>
            <Label x:Name="Booker" FontAttributes="Bold"/>
            <Label x:Name="BookerPhone"/>
            <Button Text="Позвонить ресторану" Clicked="CallRest"/>
            <Button Text="Позвонить получателю" Clicked="CallBooker"/>
            <Button Text="Отметить доставку" Clicked="Finish_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
