<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Volunteer.DeliveryDetailPage"
             Title="Доставка">
    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="10">
            <Label x:Name="TitleLbl" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="FoodLbl"/>
            <Label x:Name="RestLbl"/>
            <Label x:Name="RecipLbl"/>
            <Button Text="Позвонить получателю" x:Name="CallBtn"/>
            <Button Text="Завершить доставку" BackgroundColor="#16A34A" TextColor="White" x:Name="DoneBtn"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
