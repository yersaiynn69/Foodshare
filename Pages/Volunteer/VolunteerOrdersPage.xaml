<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Volunteer.VolunteerOrdersPage"
             Title="Забронированные">
    <CollectionView x:Name="List" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="12,6" Padding="12" BorderColor="#E5E7EB">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="{Binding Title}" FontAttributes="Bold"/>
                        <Label Text="{Binding Detail}" FontSize="12"/>
                        <HorizontalStackLayout Spacing="8">
                            <Button Text="Откликнуться" Command="{Binding BindingContext.AcceptCmd, Source={x:Reference Name=List}}" CommandParameter="{Binding Id}"/>
                            <Button Text="Детали" Command="{Binding BindingContext.OpenCmd, Source={x:Reference Name=List}}" CommandParameter="{Binding Id}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
