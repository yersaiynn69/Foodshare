<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="Foodshare.Pages.Needy.NpoDirectoryPage"
             Title="НПО">
    <CollectionView x:Name="List" Padding="12">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="12" Margin="0,8" BorderColor="#ddd" CornerRadius="12">
                    <VerticalStackLayout>
                        <Label Text="{Binding Title}" FontAttributes="Bold"/>
                        <Label Text="{Binding Address}" FontSize="12"/>
                        <Button Text="Позвонить" CommandParameter="{Binding Phone}" Clicked="Call_Clicked"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
