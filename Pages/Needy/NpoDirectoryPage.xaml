<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Needy.NpoDirectoryPage"
             Title="Список НПО">
  <CollectionView x:Name="List" SelectionMode="None">
    <CollectionView.ItemTemplate>
      <DataTemplate>
        <Frame Margin="12,6" Padding="10" BorderColor="#E5E7EB">
          <VerticalStackLayout Spacing="4">
            <Label Text="{Binding Name}" FontAttributes="Bold"/>
            <Label Text="{Binding Phone}" />
            <HorizontalStackLayout Spacing="8">
              <Button Text="Позвонить" Command="{Binding CallCmd}" CommandParameter="{Binding Phone}"/>
              <Button Text="Написать" Command="{Binding MailCmd}" CommandParameter="{Binding Email}"/>
            </HorizontalStackLayout>
          </VerticalStackLayout>
        </Frame>
      </DataTemplate>
    </CollectionView.ItemTemplate>
  </CollectionView>
</ContentPage>
