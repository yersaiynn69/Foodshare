<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            x:Class="Foodshare.Pages.Restaurant.RestaurantHomePage"
            BarBackgroundColor="{StaticResource Primary}" BarTextColor="White">
    <ContentPage Title="{x:Static local:Texts.Restaurant_Home}">
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="12">
                <Button Text="{x:Static local:Texts.AddFood}" Clicked="Add_Clicked"/>
                <Button Text="{x:Static local:Texts.MyDistributions}" Clicked="My_Clicked"/>
                <Button Text="{x:Static local:Texts.ReservedOrders}" Clicked="Reserved_Clicked"/>
                <CollectionView x:Name="History"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>

    <ContentPage Title="{x:Static local:Texts.Ratings}">
        <pages:RatingsPage xmlns:pages="clr-namespace:Foodshare.Pages.Common"/>
    </ContentPage>

    <ContentPage Title="{x:Static local:Texts.Profile}">
        <pages:RestaurantProfilePage xmlns:pages="clr-namespace:Foodshare.Pages.Restaurant"/>
    </ContentPage>
</TabbedPage>
