<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Restaurant.AddFoodPage"
             Title="Добавить еду">
  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="10">
      <Entry x:Name="TitleEntry" Placeholder="Название"/>
      <Editor x:Name="DescEditor" Placeholder="Описание" AutoSize="TextChanges"/>
      <Entry x:Name="KgEntry" Placeholder="Кол-во (кг)" Keyboard="Numeric"/>
      <Entry x:Name="AddressEntry" Placeholder="Адрес филиала"/>
      <Entry x:Name="LatEntry" Placeholder="Широта" Keyboard="Numeric"/>
      <Entry x:Name="LngEntry" Placeholder="Долгота" Keyboard="Numeric"/>
      <Button x:Name="SaveBtn" Text="Добавить"/>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
