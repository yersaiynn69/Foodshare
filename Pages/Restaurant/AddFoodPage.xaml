<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="Foodshare.Pages.Restaurant.AddFoodPage"
             Title="Добавление еды">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="10">
            <Entry x:Name="TitleEntry" Placeholder="Название"/>
            <Editor x:Name="DescEntry" Placeholder="Описание" AutoSize="TextChanges" HeightRequest="80"/>
            <Entry x:Name="KgEntry" Placeholder="Килограммы (например 2.5)" Keyboard="Numeric"/>
            <Entry x:Name="AddressEntry" Placeholder="Адрес выдачи"/>
            <Image x:Name="Photo" HeightRequest="160"/>
            <HorizontalStackLayout>
                <Button Text="Фото" Clicked="Photo_Clicked"/>
                <Button Text="Добавить" Clicked="Add_Clicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
