<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Auth.LoginPage"
             Title="Вход">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="14">
            <Image Source="logo.png" HeightRequest="96" HorizontalOptions="Center"/>
            <Entry x:Name="EmailEntry" Placeholder="Email"/>
            <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True"/>

            <Picker x:Name="CityPicker" Title="Город">
                <x:String>Атырау</x:String>
            </Picker>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Войти" x:Name="LoginBtn"/>
                <Button Text="Нет аккаунта?" x:Name="RegisterBtn"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Button Text="Забыли пароль" x:Name="ForgotBtn"/>
                <Button Text="Язык: Русский / Қазақша" x:Name="LangBtn"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
