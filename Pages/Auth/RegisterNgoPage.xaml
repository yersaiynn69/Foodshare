<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Auth.RegisterNgoPage"
             Title="Регистрация: НПО">
  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="10">
      <Entry x:Name="OrgName" Placeholder="Название НПО (юр. лицо)"/>
      <Entry x:Name="Bin" Placeholder="БИН" Keyboard="Numeric"/>
      <Entry x:Name="Phone" Placeholder="Телефон" Keyboard="Telephone"/>
      <Entry x:Name="Email" Placeholder="Email" Keyboard="Email"/>
      <Picker x:Name="City" Title="Город" SelectedIndex="0">
        <x:String>Атырау</x:String>
      </Picker>
      <Entry x:Name="Address" Placeholder="Юридический адрес"/>
      <Entry x:Name="Password" Placeholder="Пароль" IsPassword="True"/>
      <Entry x:Name="Password2" Placeholder="Повтор пароля" IsPassword="True"/>
      <Button x:Name="SaveBtn" Text="Зарегистрироваться"/>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
