<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodshare.Pages.Common.RatingsPage"
             Title="Рейтинг">
    <VerticalStackLayout Padding="12" Spacing="10">
        <Picker x:Name="TypePicker" Title="Тип">
            <x:String>Рестораны</x:String>
            <x:String>Волонтёры</x:String>
            <x:String>НПО</x:String>
        </Picker>
        <CollectionView x:Name="List" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,6" Padding="10" BorderColor="#E5E7EB">
                        <Grid ColumnDefinitions="40,*,Auto" ColumnSpacing="8">
                            <Label Text="{Binding Pos}"/>
                            <Label Grid.Column="1" Text="{Binding Name}"/>
                            <Label Grid.Column="2" Text="{Binding Score}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
